<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>

<div class="{% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="rich-text color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width{% else %}rich-text__blocks{% endif %}">
    <div class="page-width" style="text-align:{{ section.settings.align }};">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>{{ block.settings.heading | escape }}</h2>
          {%- when 'text' -%}
            <div class="rich-text__text rte {% if block.settings.margin %}p-nomargin{% endif %} {% if block.settings.indent %}p-indent{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- when 'button' -%}
            <a{% if block.settings.button_link == blank %} aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
              {{ block.settings.button_label | escape }}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>



{% schema %}
{
  "name": "t:sections.accordian.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.accordian.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.accordian.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.accordian.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.accordian.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.accordian.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.accordian.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.accordian.settings.full_width.label"
    },
	{
      "type": "select",
      "id": "align",
      "options": [
        {
          "value": "left",
          "label": "t:sections.accordian.settings.align.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.accordian.settings.align.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.accordian.settings.align.options__3.label"
        },
		{
          "value": "justify",
          "label": "t:sections.accordian.settings.align.options__4.label"
        }
      ],
      "default": "center",
      "label": "t:sections.accordian.settings.align.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.accordian.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "t:sections.accordian.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.accordian.blocks.heading.settings.heading_size.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.accordian.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "t:sections.accordian.blocks.text.settings.text.label"
        },
		{
          "type": "checkbox",
          "id": "margin",
          "default": false,
          "label": "t:sections.accordian.blocks.text.settings.margin.label"
        },
		{
          "type": "checkbox",
          "id": "indent",
          "default": false,
          "label": "t:sections.accordian.blocks.text.settings.indent.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.accordian.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.accordion {
margin: 0;
padding:10px;
border-top:#f0f0f0 1px solid;
background: #cccccc;
text-decoration:none;
color: #000;
font-size:1em;
position:relative;
}
.accordion-open {
background:#50b3da;
color: #fff;
}
.accordion-open span {
display:block;
position:absolute;
right:3px;
top:25%;
padding:10px;
}
.accordion-open span {
background:url('{{ 'minus.png' | asset_url }}') center center no-repeat;
}
.accordion-close span {
display:block;
position:absolute;
right:3px;
top:25%;
background:url('{{ 'plus.png' | asset_url }}') center center no-repeat;
padding:10px;
}
.faqpage div.container {
padding:0;
margin:0;
}
.faqpage div.container {
max-width:100%;
padding:5px 0;
}
.faqpage div.content {
background:#f0f0f0;
margin: 0;
padding:10px;
font-size:.9em;
line-height:1.5em;
}
.faqpage div.content ul {
padding:0;
margin:0;
padding:3px;
}
.faqpage div.content p {
padding:0;
margin:3px 0 10px;
padding:3px;
}
.faqpage div.content ul li {
list-style-position:inside;
line-height:25px;
}
{% endstylesheet %}

{% javascript %}
$(document).ready(function() {
$('.accordion').accordion({
defaultOpen: 'section1',
cookieName: 'accordion_nav'
});
});
{% endjavascript %}
