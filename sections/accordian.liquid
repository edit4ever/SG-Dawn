{% schema %}
{
  "name": "t:sections.accordian.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.accordian.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.accordian.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.accordian.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.accordian.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.accordian.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.accordian.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.accordian.settings.full_width.label"
    },
	{
      "type": "select",
      "id": "align",
      "options": [
        {
          "value": "left",
          "label": "t:sections.accordian.settings.align.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.accordian.settings.align.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.accordian.settings.align.options__3.label"
        },
		{
          "value": "justify",
          "label": "t:sections.accordian.settings.align.options__4.label"
        }
      ],
      "default": "center",
      "label": "t:sections.accordian.settings.align.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.accordian.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "t:sections.accordian.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.accordian.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.accordian.blocks.heading.settings.heading_size.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.accordian.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "t:sections.accordian.blocks.text.settings.text.label"
        },
		{
          "type": "checkbox",
          "id": "margin",
          "default": false,
          "label": "t:sections.accordian.blocks.text.settings.margin.label"
        },
		{
          "type": "checkbox",
          "id": "indent",
          "default": false,
          "label": "t:sections.accordian.blocks.text.settings.indent.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.accordian.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.accordion {
margin: 0;
padding:10px;
border-top:#f0f0f0 1px solid;
background: #cccccc;
text-decoration:none;
color: #000;
font-size:1em;
position:relative;
}
.accordion-open {
background:#50b3da;
color: #fff;
}
.accordion-open span {
display:block;
position:absolute;
right:3px;
top:25%;
padding:10px;
}
.accordion-open span {
background:url('{{ 'minus.png' | asset_url }}') center center no-repeat;
}
.accordion-close span {
display:block;
position:absolute;
right:3px;
top:25%;
background:url('{{ 'plus.png' | asset_url }}') center center no-repeat;
padding:10px;
}
.faqpage div.container {
padding:0;
margin:0;
}
.faqpage div.container {
max-width:100%;
padding:5px 0;
}
.faqpage div.content {
background:#f0f0f0;
margin: 0;
padding:10px;
font-size:.9em;
line-height:1.5em;
}
.faqpage div.content ul {
padding:0;
margin:0;
padding:3px;
}
.faqpage div.content p {
padding:0;
margin:3px 0 10px;
padding:3px;
}
.faqpage div.content ul li {
list-style-position:inside;
line-height:25px;
}
{% endstylesheet %}

