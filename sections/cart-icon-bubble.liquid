{%- liquid
  if cart == empty
    render 'icon-cart-empty'
  else
    render 'icon-cart'
  endif
-%}
<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
{%- if cart != empty -%}
  <div class="cart-count-bubble"{%- if cart.item_count > 99 -%} style="width:1.9rem"{%- endif -%}>
        <span aria-hidden="true" style="padding-left: 1px;">{{ cart.item_count }}</span>
      <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
  </div>
{%- endif -%}
